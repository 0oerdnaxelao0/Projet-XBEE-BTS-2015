<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffea1e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffff832b"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Honeybee"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="30dp"
        android:id="@+id/i_poids"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/i_tension"
        android:layout_alignTop="@+id/i_poids"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="50px"
        android:id="@+id/i_temperature"
        android:layout_below="@+id/i_poids"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="poids: "
        android:id="@+id/l_poids"
        android:layout_below="@+id/i_poids"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tension: "
        android:id="@+id/l_tension"
        android:layout_alignTop="@+id/tension"
        android:layout_toRightOf="@+id/l_temperature"
        android:layout_toEndOf="@+id/l_temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="temperature: "
        android:id="@+id/l_temperature"
        android:layout_below="@+id/i_temperature"
        android:layout_alignLeft="@+id/i_temperature"
        android:layout_alignStart="@+id/i_temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/poids"
        android:layout_below="@+id/i_poids"
        android:layout_toRightOf="@+id/l_poids"
        android:layout_toEndOf="@+id/l_poids" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tension"
        android:layout_below="@+id/i_tension"
        android:layout_toRightOf="@+id/l_tension" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/temperature"
        android:layout_below="@+id/i_temperature"
        android:layout_toRightOf="@+id/l_temperature"
        android:layout_toEndOf="@+id/l_temperature" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="suivi journalier"
        android:id="@+id/suivi_j"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
